@model List<VidlyTutorial.Models.Movie>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h1>Movies</h1>
    <button onclick="@Url.Action("","")"></button>
    <table class="table table-white">
        <thead>
            <tr>
                <th>Movies</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var items in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("Edit","Movie", new { Id = items.Id, Name=items.Name})">@items.Name</a>
                        </td>
                        <td>
                            @items.Genre.Name
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</body>
</html>
